<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
	<TargetFrameworks>net5.0;net6.0</TargetFrameworks>
	<AssemblyTitle>Halva Package Core</AssemblyTitle>
	<Authors>AceOfAces</Authors>
	<Company>Studio ACE</Company>
	<Product>Halva Package</Product>
	<RepositoryUrl>https://github.com/acemod13/Halva.Package</RepositoryUrl>
	<PackageTags>compression, package, Brotli, game-package</PackageTags>
	<PackageLicenseFile></PackageLicenseFile>
	<AssemblyVersion>1.1.6.21332</AssemblyVersion>
	<FileVersion>1.1.6.21332</FileVersion>
	<PackageId>Halva.Package.Core</PackageId>
	<Version>1.1.6</Version>
	<Description>Halva (Χαλβάς in Greek) is a small .NET 5+ library that implements Google's Brotli compression, alognside some encryption options. The Halva package is a general purpose game data packaging system that provides good and fast compression, making it suitable for storing the game files with the game, releasing patches, etc.</Description>
	<PackageReleaseNotes>-Dropped .NET Standard 2.1 support, in order to take advantage of .NET 5+ features.
-Tweaked the Utilities code to allow multi-threading.</PackageReleaseNotes>
	<Copyright>2021 © Studio ACE</Copyright>
		<NeutralLanguage>en</NeutralLanguage>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<PackageProjectUrl>https://studioace.wordpress.com/halva-packaging-system/</PackageProjectUrl>
		<ImplicitUsings>enable</ImplicitUsings>
		<EnableNETAnalyzers>True</EnableNETAnalyzers>
		<AnalysisLevel>latest</AnalysisLevel>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<PackageReadmeFile>README.md</PackageReadmeFile>
    <IsTrimmable>true</IsTrimmable>
    <LangVersion>latest</LangVersion>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
	<ShouldCreateLogs>True</ShouldCreateLogs>
	<AdvancedSettingsExpanded>False</AdvancedSettingsExpanded>
	<UpdateAssemblyVersion>False</UpdateAssemblyVersion>
	<UpdateAssemblyFileVersion>False</UpdateAssemblyFileVersion>
	<UpdateAssemblyInfoVersion>False</UpdateAssemblyInfoVersion>
	<UpdatePackageVersion>False</UpdatePackageVersion>
	<AssemblyInfoVersionType>SettingsVersion</AssemblyInfoVersionType>
	<InheritWinAppVersionFrom>None</InheritWinAppVersionFrom>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
	<ShouldCreateLogs>True</ShouldCreateLogs>
	<AdvancedSettingsExpanded>False</AdvancedSettingsExpanded>
	<UpdateAssemblyVersion>False</UpdateAssemblyVersion>
	<UpdateAssemblyFileVersion>False</UpdateAssemblyFileVersion>
	<UpdateAssemblyInfoVersion>False</UpdateAssemblyInfoVersion>
	<UpdatePackageVersion>False</UpdatePackageVersion>
	<PackageVersionSettings>AssemblyVersion.None.Alpha</PackageVersionSettings>
	<AssemblyInfoVersionType>SettingsVersion</AssemblyInfoVersionType>
	<InheritWinAppVersionFrom>None</InheritWinAppVersionFrom>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|netstandard2.1|AnyCPU'">
	  <FileAlignment>4096</FileAlignment>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|netstandard2.1|AnyCPU'">
	  <FileAlignment>4096</FileAlignment>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net5.0|AnyCPU'">
	  <FileAlignment>4096</FileAlignment>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net5.0|AnyCPU'">
	  <FileAlignment>4096</FileAlignment>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net6.0|AnyCPU'">
	  <FileAlignment>4096</FileAlignment>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net6.0|AnyCPU'">
	  <FileAlignment>4096</FileAlignment>
	</PropertyGroup>

	<ItemGroup>
	<None Include="..\..\LICENSE">
		<Pack>True</Pack>
		<PackagePath></PackagePath>
	</None>
	<None Include="..\..\README.md">
	  <Pack>True</Pack>
	  <PackagePath>\</PackagePath>
	</None>
	</ItemGroup>

	<ItemGroup>
	<PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1">
		<PrivateAssets>all</PrivateAssets>
		<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
	</PackageReference>
	</ItemGroup>

</Project>
